<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardElevation="@dimen/space_2"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="140dp">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="140dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_subcat_img"
                android:layout_width="93dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
            android:id="@+id/tv_subcat_add"
            android:layout_width="120dp"
                android:textStyle="bold"
            android:textSize="13dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_textview"
            android:gravity="center"
                android:fontFamily="@font/opificio"
            android:text="@string/tv_pro_add"
                android:textAllCaps="true"
            android:textColor="@color/white"

            />
         <TextView
                android:id="@+id/tv_subcat_add1"
                android:layout_width="100dp"

                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_textview"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/tv_pro_update"
             android:textAllCaps="true"
                android:fontFamily="@font/opificio"
                android:textColor="@color/white"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_subcat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                android:text="TextView"
                android:fontFamily="@font/opificio"
                android:textSize="@dimen/space_14" />

            <TextView
                android:id="@+id/tv_subcat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:text="TextView"
                android:textStyle="bold"
                android:fontFamily="@font/opificio"
                android:textSize="@dimen/space_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="@dimen/space_3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_cart_total"
                    android:textStyle="bold"
                    android:fontFamily="@font/opificio"
                    android:textSize="@dimen/space_14" />

                <TextView
                    android:id="@+id/tv_subcat_total"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opificio"
                    android:textSize="@dimen/space_14" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Qty: "
                android:textStyle="bold"

                android:fontFamily="@font/opificio"
                android:textSize="@dimen/space_15" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textStyle="bold"
                    android:layout_weight="1"

                    android:fontFamily="@font/opificio"
                    android:textSize="@dimen/space_15" />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textStyle="bold"

                    android:fontFamily="@font/opificio"
                    android:textSize="@dimen/space_15" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:layout_height="140dp">

            <LinearLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="@dimen/space_3"
                android:gravity="right"
                android:orientation="vertical">

                <Button
                    android:id="@+id/twofivegm"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/design_text"
                    android:fontFamily="@font/opificio"
                    android:text="250 gram"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/space_13" />

                <Button
                    android:id="@+id/fivegm"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/design_text"
                    android:fontFamily="@font/opificio"
                    android:text="500 gram"
                    android:textAllCaps="false"
                    android:textSize="@dimen/space_13" />

                <Button
                    android:id="@+id/onekg"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/design_text"
                    android:fontFamily="@font/opificio"
                    android:text="1 kg"
                    android:textAllCaps="false"
                    android:textSize="@dimen/space_13" />

                <Button
                    android:id="@+id/custom"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/design_text"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/opificio"
                    android:text="Custom"
                    android:textAllCaps="false"
                    android:textSize="@dimen/space_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="@dimen/space_3"
                android:gravity="right"
                android:visibility="gone"
                android:orientation="vertical">

                <EditText
                    android:layout_width="50dp"
                    android:id="@+id/qty"
                    android:fontFamily="@font/opificio"
                    android:inputType="number"

                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/cancel"
                    android:fontFamily="@font/opificio"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginRight="0dp"
                    android:text="cancel"

                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/design_text"
                    android:textSize="@dimen/space_16" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>