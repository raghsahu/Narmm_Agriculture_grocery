<?xml version="1.0"?>

    <LinearLayout android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:orientation="vertical" android:background="@color/whiteColor" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- vertical ScrollView to make all the items or views scrollable -->



    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none">

    <!-- LinearLayout Inside ScrollView -->



    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:orientation="horizontal" android:layout_height="100dp" android:layout_width="match_parent" android:weightSum="4" android:layout_gravity="center" android:id="@+id/lang">

    <!-- create a Linear Layout with horizontal orientation and weightSum property -->


    <ImageView
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:id="@+id/imageView1"
        android:src="@drawable/logo"
        android:layout_weight="2"
        />

    <TextView
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textColor="@color/blackColor"
        android:textColorHint="@color/black"
        android:singleLine="false"
        android:text="National Agriculture Research &amp; Marketing Management Pvt. Ltd."
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="12dp"
        android:gravity="center"
        tools:ignore="RtlCompat"
        />

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:weightSum="4" android:id="@+id/lang1">

    <!-- create a Linear Layout with horizontal orientation and weightSum property -->
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_weight="2"
           android:padding="6dp">

        <TextView
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tv_dr_name"
            android:layout_weight="1"
            android:textColor="@color/blackColor"
            android:textColorHint="@color/colorPrimary"
            android:singleLine="false"
            android:imeOptions="actionNext"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:hint="Dr. Ray Singh Pal"
            android:layout_marginRight="10dp"/>

           <ImageView
               android:id="@+id/dr_profile_img"
               android:layout_gravity="center"
               android:layout_width="100dp"
               android:layout_height="90dp"
               android:scaleType="fitXY"
               android:src="@drawable/per" />

    </LinearLayout>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center" android:layout_weight="2" android:padding="6dp">

    <ImageView android:background="@drawable/crop" android:layout_height="150dp" android:layout_width="match_parent" android:layout_gravity="center" android:id="@+id/img_crop" android:layout_weight="2" android:textColor="@color/blackColor" android:singleLine="true" android:imeOptions="actionNext" android:textAllCaps="true" android:textStyle="bold" android:textSize="20dp" android:gravity="center" android:layout_marginLeft="10dp"/>

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:weightSum="4" android:id="@+id/fourthLayout" android:layout_marginTop="20dp">

    <!-- place one TextView and one EditText inside layout using weight property -->


    <TextView android:padding="10dp" android:background="@color/editTextBack" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center" android:id="@+id/teh" android:layout_weight="2" android:textColor="@color/blackColor" android:textColorHint="@color/colorPrimary" android:singleLine="true" android:imeOptions="actionNext" android:textStyle="bold" android:textSize="20dp" android:hint="Company Profile"/>

    <TextView android:padding="10dp" android:background="@color/editTextBack" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/teh1" android:layout_weight="2" android:textColor="@color/blackColor" android:singleLine="false" android:imeOptions="actionNext" android:text="@string/profile" android:textStyle="bold" android:textSize="15dp"/>

</LinearLayout>

    <!-- create a Linear Layout with horizontal orientation and weightSum property -->



    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:weightSum="4" android:layout_marginTop="20dp">

    <!-- place one TextView and one EditText inside layout using weight property -->


    <TextView android:padding="10dp" android:background="@color/editTextBack" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center" android:layout_weight="2" android:textColor="@color/blackColor" android:textColorHint="@color/colorPrimary" android:singleLine="true" android:imeOptions="actionNext" android:textStyle="bold" android:textSize="20dp" android:hint="Mission"/>

    <TextView android:padding="10dp" android:background="@color/editTextBack" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:layout_weight="2" android:textColor="@color/blackColor" android:singleLine="false" android:imeOptions="actionNext" android:text="@string/mission" android:textStyle="bold" android:textSize="15dp"/>

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:weightSum="4" android:layout_marginTop="20dp">

    <!-- place one TextView and one EditText inside layout using weight property -->


    <TextView android:padding="10dp" android:background="@color/editTextBack" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center" android:layout_weight="2" android:textColor="@color/blackColor" android:textColorHint="@color/colorPrimary" android:singleLine="true" android:imeOptions="actionNext" android:textStyle="bold" android:textSize="20dp" android:hint="Vision"/>

    <TextView android:padding="10dp" android:background="@color/editTextBack" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:layout_weight="2" android:textColor="@color/blackColor" android:singleLine="false" android:imeOptions="actionNext" android:text="@string/vission" android:textStyle="bold" android:textSize="15dp"/>

</LinearLayout>

    <Button
        android:background="@color/greenColor" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/submit" android:textColor="@color/whiteColor" android:text="Continue" android:layout_marginTop="30dp" android:onClick="go_registration"/>

</LinearLayout>

    </LinearLayout>

</ScrollView>

</LinearLayout>