<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.drraisingh.narmm.Fragment.add_payment_wallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/calendar_detail_time_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="6dp"
            card_view:cardCornerRadius="3dp"
            card_view:cardUseCompatPadding="true">
        <TextView
            android:layout_width="match_parent"

            android:textSize="@dimen/space_15"
            android:gravity="center"
            android:text="Your outstanding amount is Rs. :0"
            android:background="@drawable/button_design"
            android:layout_height="70dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/add_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="6dp"
            card_view:cardCornerRadius="3dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"

                android:textSize="@dimen/space_15"
                android:gravity="center"
                android:text="Payment Amount"
                android:fontFamily="@font/opificio"
                android:textStyle="bold"
                android:background="@drawable/button_design"
                android:layout_height="70dp" />
            <EditText
                android:layout_width="match_parent"
                android:inputType="number"
                android:text="0"
                android:gravity="center"
                android:layout_height="40dp" />
                <TextView
                    android:layout_width="match_parent"

                    android:textSize="@dimen/space_15"
                    android:gravity="center"
                    android:text="Suggested Amount:"
                    android:fontFamily="@font/opificio"
                    android:textStyle="bold"
                    android:background="@drawable/button_design"
                    android:layout_height="70dp" />

                <Button
                    android:layout_width="190dp"
                    android:layout_gravity="center"
                    android:text="pay now"
                    android:background="#FF0000"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:fontFamily="@font/opificio"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"

                    android:textSize="@dimen/space_15"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:text="Suggested Amount:"
                    android:fontFamily="@font/opificio"
                    android:textStyle="bold"
                    android:background="@drawable/button_design"
                    android:layout_height="30dp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>
