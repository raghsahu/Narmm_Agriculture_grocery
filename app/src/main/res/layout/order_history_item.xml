<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_gray">


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#fff">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/li_head_card"
        android:background="@color/gray">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"

        >
    <LinearLayout
        android:background="#bbd46a"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/order_p_name"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:text="Order id-"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tv_order_id"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:text="1234"
        android:gravity="right"
        android:layout_marginRight="10dp"/>

</LinearLayout>


    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="Date: "/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tv_order_date"
        android:textStyle="bold"
        android:text="00 "
        android:gravity="right"
        android:layout_marginRight="10dp"/>

</LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="Happy code: "/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tv_happy_code"
        android:textStyle="bold"
        android:text="00 "
        android:gravity="right"
        android:layout_marginRight="10dp"/>

</LinearLayout>

</LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_shop_address"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="Shop Address: "/>


            </LinearLayout>

        </LinearLayout>

</LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="10dp">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:background="@color/dark_gray">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="Item"
        android:gravity="center_horizontal"
        android:layout_weight=".7"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/tv_quantity_bill"
        android:text="Qty"
        android:gravity="center_horizontal"
        android:layout_weight=".3"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="Price"
        android:gravity="center_horizontal"
        android:layout_weight=".5"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="Total"
        android:gravity="center_horizontal"
        android:layout_weight=".5"/>

</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorPrimary"
            >

        </View>

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/recycler_view_bill"
        android:scrollbars="none"
        android:background="@color/gray"/>

</LinearLayout>


</LinearLayout>

    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="@android:color/darker_gray" android:layout_marginTop="3dp" android:layout_gravity="center"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_margin="10dp" android:orientation="horizontal" android:weightSum="1">

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tv_total_item"
        android:textStyle="bold"
        android:text="Num of items- "
        android:layout_weight="0.5"
        android:layout_gravity="left"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tv_total_rs" android:textStyle="bold" android:textSize="@dimen/_14sdp" android:text="Total rs- " android:gravity="right" android:layout_weight="0.5"/>

</LinearLayout>

        <View
            android:background="@color/grey_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp">

        </View>

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_margin="10dp" android:orientation="horizontal" android:gravity="center" android:weightSum="1" android:layout_gravity="center">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:gravity="center" android:layout_weight="0.3" android:layout_gravity="center">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:padding="@dimen/_3sdp" android:gravity="center" android:weightSum="1" android:layout_gravity="center">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="16dp" android:text="Order status:" android:layout_weight="0.4" android:textColor="@color/black"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/order_status"
        android:textSize="16dp"
        android:text="Pending"
        android:layout_weight="0.6"
        android:textColor="@color/green"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:padding="@dimen/_3sdp" android:gravity="center" android:weightSum="1" android:layout_gravity="center">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="16dp" android:text="Payment status:" android:layout_weight="0.4" android:textColor="@color/black"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/payment_status" android:textSize="16dp" android:text="Pending" android:layout_weight="0.6" android:textColor="@color/colorPrimary"/>

</LinearLayout>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical" android:gravity="center" android:layout_weight="0.7" android:layout_gravity="center">

        <Button
            android:id="@+id/btn_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/xml_button"
            android:gravity="center"
            android:text="View Bill"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_pay_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/xml_button"
            android:gravity="center"
            android:text="Pay now"
            android:textColor="#fff" />
</LinearLayout>


</LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/view_order"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/xml_button"
        android:textSize="16dp" android:text="View order"
        android:layout_gravity="center" android:textColor="@color/white" android:textAlignment="center" android:layout_marginBottom="@dimen/_5sdp"/>

</LinearLayout>


</android.support.v7.widget.CardView>

</LinearLayout>

</LinearLayout>