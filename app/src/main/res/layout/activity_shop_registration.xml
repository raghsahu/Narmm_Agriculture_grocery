<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShopRegistration">
    <!-- vertical ScrollView to make all the items or views scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <!-- LinearLayout Inside ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lang"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <!-- create a Linear Layout with horizontal orientation and weightSum property -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:background="@color/editTextBack"
                    android:hint="Shop Registration"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_weight="2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/firstLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->


                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"
                    android:hint="Shop Name"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />


                <!-- place one TextView and one EditText inside layout using weight property -->



            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->
            <LinearLayout
                android:id="@+id/gen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <!-- create a Linear Layout with horizontal orientation and weightSum property -->
                <EditText
                    android:id="@+id/proName"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"
                    android:hint="Propriter Name"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <!-- create a Linear Layout with horizontal orientation and weightSum property -->
                <EditText
                    android:id="@+id/gstName"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"
                    android:hint="GSTIN Number"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/vill"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"
                    android:hint="Mob No"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/thirdLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->
                <EditText
                    android:id="@+id/block"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"
                    android:hint="Email Id"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />

            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <LinearLayout
                android:id="@+id/fourthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/teh"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"
                    android:hint="Place"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />
                <EditText
                    android:id="@+id/dist"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"
                    android:hint="Market"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />
            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <LinearLayout
                android:id="@+id/fifthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/pin"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"
                    android:hint="Adhar number"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />

            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->



            <LinearLayout
                android:id="@+id/f"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="4">
                <!-- create a Linear Layout with horizontal orientation and weightSum property -->
                <Spinner
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:id="@+id/hac"
                    android:background="@color/editTextBack"

                    android:layout_weight="2"
                    android:entries="@array/block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent" />
                <Spinner
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:id="@+id/ravi"
                    android:entries="@array/district"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

            <Spinner
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:id="@+id/kharif"
                    android:entries="@array/tehsil"
                    android:layout_weight="2"
                android:background="@color/editTextBack"

                android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent" />
                <Spinner
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:id="@+id/state1"
                    android:entries="@array/state"
                    android:background="@color/editTextBack"

                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/reg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <Spinner
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:id="@+id/cmp"
                    android:entries="@array/cmp"
                    android:layout_weight="2"
                    android:background="@color/editTextBack"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent" />

            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="go_Shop"
                android:background="@color/greenColor"
                android:text="Continue"
                android:textColor="@color/whiteColor" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>